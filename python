import math
class circle:
    def __init__(self,radius):
        self.radius = radius

    def getarea(self):
        return math.pi * self.radius ** 2

    def getparameter(self):
        return 2 * math.pi * self.radius

circle1 = circle(1)
print(circle1.getarea())
print(circle1.getparameter())
